ALERT PostgresExporterScrapeError
  IF max(pg_exporter_last_scrape_error) by(instance) != 0
  FOR 30m
  LABELS {
    service = "postgres-exporter",
    severity = "warning",
    spark = "false",
    monitored_item = `{{$labels.bosh_deployment}}/{{$labels.bosh_job_name}}`,
  }
  ANNOTATIONS {
    summary = "postgres_exporter `{{$labels.instance}}` scrape error",
    description = "The `postgres_exporter` at `{{$labels.instance}}` was unable to scrape metrics during the last 10m",
  }
