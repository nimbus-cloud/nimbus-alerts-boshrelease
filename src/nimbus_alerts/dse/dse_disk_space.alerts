ALERT DSEFileSystemSpace
  IF node_filesystem_avail{job="cassandra",mountpoint="/"} < node_filesystem_size{job="cassandra",mountpoint="/"}/2
  FOR 1h
  LABELS {
    service = "dse-cassandra",
    severity = "minor",
    spark = "true",
    monitored_item = `{{$labels.instance}}/{{$labels.job}}`,
  }
  ANNOTATIONS {
    summary = "DSE node disk is below 50%",
    description = "DSE Node is below 50% free disk space",
  }
